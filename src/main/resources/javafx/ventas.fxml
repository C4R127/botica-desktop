<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.botica.botica_desktop.controller.VentasController"
            stylesheets="@estilos.css"
            prefWidth="1000" prefHeight="650">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: white; -fx-padding: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 1);">
            <Label text="Punto de Venta" styleClass="label-titulo"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Label fx:id="lblTotalDia"
                   text="Ventas Hoy: S/. 0.00"
                   style="-fx-background-color: #d4efdf; -fx-text-fill: #27ae60; -fx-font-weight: bold; -fx-padding: 5 15; -fx-background-radius: 15;"/>

            <Label fx:id="lblFecha" text="Fecha: --/--/----" style="-fx-text-fill: #7f8c8d; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <center>
        <HBox spacing="20" style="-fx-padding: 20;">

            <VBox spacing="10" HBox.hgrow="ALWAYS" styleClass="form-container">
                <Label text="ðŸ”Ž Buscar Producto" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>

                <HBox spacing="10">
                    <TextField fx:id="txtBuscar" promptText="Nombre del producto..." HBox.hgrow="ALWAYS" onKeyReleased="#buscarProducto"/>
                </HBox>

                <TableView fx:id="tablaBusqueda" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colBusqNombre" text="Producto" prefWidth="200"/>
                        <TableColumn fx:id="colBusqStock" text="Stock" prefWidth="70"/>
                        <TableColumn fx:id="colBusqPrecio" text="Precio" prefWidth="80"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>

                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #ecf0f1; -fx-padding: 10; -fx-background-radius: 5;">
                    <Label text="Cantidad:"/>
                    <TextField fx:id="txtCantidad" text="1" prefWidth="60" alignment="CENTER"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="âž¡ Agregar al Carrito" onAction="#agregarProducto" styleClass="button, btn-guardar"/>
                </HBox>
            </VBox>

            <VBox spacing="10" prefWidth="400" styleClass="form-container">
                <Label text="ðŸ›’ Carrito de Compras" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #2980b9;"/>

                <TableView fx:id="tablaCarrito" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colCarrProducto" text="Producto" prefWidth="150"/>
                        <TableColumn fx:id="colCarrCant" text="Cant." prefWidth="50"/>
                        <TableColumn fx:id="colCarrSubtotal" text="Subtotal" prefWidth="80"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>

                <Button text="âŒ Quitar Seleccionado"
                        onAction="#quitarDelCarrito"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-cursor: hand;"
                        maxWidth="Infinity"/>

                <Separator/>

                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <Label text="TOTAL A PAGAR:" style="-fx-font-size: 16px;"/>
                    <Label fx:id="lblTotal" text="S/. 0.00" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;"/>
                </HBox>

                <Button text="âœ… PROCESAR VENTA"
                        onAction="#finalizarVenta"
                        maxWidth="Infinity"
                        styleClass="button, btn-guardar"
                        style="-fx-font-size: 16px; -fx-padding: 15;"/>
            </VBox>

        </HBox>
    </center>

</BorderPane>