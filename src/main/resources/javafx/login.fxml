<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.botica.botica_desktop.controller.LoginController"
           stylesheets="@estilos.css"
           styleClass="login-background"
           prefWidth="600" prefHeight="450">

    <VBox spacing="20" alignment="CENTER" styleClass="login-card" maxWidth="350">

        <Label text="Farmacia" styleClass="login-title"/>
        <Label text="Acceso al Sistema" style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;"/>

        <VBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Usuario" style="-fx-font-weight: bold;"/>
            <TextField fx:id="txtUsername" promptText="Ingrese su usuario" prefHeight="35"/>
        </VBox>

        <VBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Contraseña" style="-fx-font-weight: bold;"/>
            <PasswordField fx:id="txtPassword" promptText="Ingrese su contraseña" prefHeight="35"/>
        </VBox>

        <Button text="INICIAR SESIÓN"
                onAction="#login"
                defaultButton="true"
                maxWidth="Infinity"
                styleClass="button, btn-guardar"
                style="-fx-font-size: 14px; -fx-padding: 10;"/>

        <Button text="¿No tienes cuenta? Regístrate aquí"
                onAction="#abrirRegistro"
                maxWidth="Infinity"
                style="-fx-background-color: transparent; -fx-text-fill: #2980b9; -fx-underline: true; -fx-cursor: hand; -fx-font-size: 12px;"/>

        <Label fx:id="lblMensaje" styleClass="error-label"/>

    </VBox>

</StackPane>