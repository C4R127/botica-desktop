<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.botica.botica_desktop.controller.ProductoController"
            stylesheets="@estilos.css"
            prefWidth="900" prefHeight="600">

    <top>
        <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 1);">
            <HBox alignment="CENTER_LEFT">
                <Label text="GestiÃ³n de Inventario" styleClass="label-titulo"/>
            </HBox>

            <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: #f8f9fa; -fx-padding: 10; -fx-background-radius: 5;">
                <Label text="ðŸ” Buscar:"/>
                <TextField fx:id="txtBuscar" promptText="Escribe el nombre del producto..." prefWidth="300"/>

                <Separator orientation="VERTICAL"/>

                <CheckBox fx:id="chkStockBajo" text=" Ver solo Stock Bajo"
                          style="-fx-text-fill: #c0392b; -fx-font-weight: bold; -fx-cursor: hand;"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="10" style="-fx-padding: 20;">
            <TableView fx:id="tablaProductos" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colNombre" text="Nombre Producto" prefWidth="250"/>
                    <TableColumn fx:id="colPrecio" text="Precio (S/.)" prefWidth="100"/>
                    <TableColumn fx:id="colStock" text="Stock" prefWidth="80"/>
                    <TableColumn fx:id="colVencimiento" text="Vencimiento" prefWidth="120"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

    <right>
        <VBox spacing="15" prefWidth="300" style="-fx-padding: 20; -fx-background-color: #f4f6f8;">
            <VBox styleClass="form-container" spacing="10">
                <Label text="Detalles del Producto" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <Separator/>

                <Label text="Nombre:"/>
                <TextField fx:id="txtNombre" promptText="Ej. Paracetamol 500mg"/>

                <Label text="Precio:"/>
                <TextField fx:id="txtPrecio" promptText="0.00"/>

                <Label text="Stock:"/>
                <TextField fx:id="txtStock" promptText="0"/>

                <Label text="Fecha Vencimiento:"/>
                <DatePicker fx:id="dpVencimiento" maxWidth="Infinity"/>

                <Separator/>

                <HBox spacing="10" alignment="CENTER">
                    <Button text="Nuevo/Limpiar" onAction="#limpiarFormulario" styleClass="button, btn-limpiar"/>
                    <Button text="Guardar" onAction="#guardar" styleClass="button, btn-guardar" prefWidth="100"/>
                </HBox>

                <Button text="Eliminar Seleccionado" onAction="#eliminar"
                        styleClass="button, btn-eliminar" maxWidth="Infinity"/>
            </VBox>
        </VBox>
    </right>

</BorderPane>